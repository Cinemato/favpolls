<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>favpolls.com</title>
    <link rel="shortcut icon" href="~/images/logo/logo-icon.png" type="image/x-icon">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lilita+One&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="desktop-nav">
            <ul>
                <li>
                    <a asp-controller="Poll" asp-action="Index">
                        <img src="~/images/logo/logo-icon.png" alt="favpolls-logo-icon" width="40px">
                        <img src="~/images/logo/logo-text.svg" alt="favpolls-logo-text" width="200px">
                    </a>
                </li>
                <li><a asp-controller="Poll" asp-action="Create">Create Poll</a></li>
                <li><a asp-controller="Poll" asp-action="Index">Join Poll</a></li>
            </ul>
            <ul>
                <partial name="_LoginPartial" />
            </ul>
        </nav>
        <nav class="mobile-nav">
            <ul>
                <li>
                    <a asp-controller="Poll" asp-action="Index">
                        <img src="~/images/logo/logo-icon.png" alt="favpolls-logo-icon" width="40px">
                    </a>
                </li>
                <li>
                    <img src="~/images/icons/menu.svg" alt="menu-button" width="40px" id="mobile-menu-button">
                </li>
            </ul>
            <ul class="mobile-nav-links">
                <li><a asp-controller="Poll" asp-action="Create">Create Poll</a></li>
                <li><a asp-controller="Poll" asp-action="Index">Join Poll</a></li>
                <partial name="_LoginPartial" />
            </ul>
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer style="margin: 100px 0 20px 0">
        Copyright ©2023 All rights reserved
    </footer>
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/mobile-menu.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
