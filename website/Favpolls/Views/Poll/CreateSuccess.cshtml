@model Poll
<div class="index-container">
    <div class="subcontainer">
        <img src="~/images/icons/checkmark-circle.svg" alt="checkmark" width="150px" class="success-icon">
        <h1 class="title">Share your new poll!</h1>
        <div class="form-container">
            <div class="poll-info">
                <p>Poll Code:</p>
                <h3 class="poll-code">@Model.Code</h3>
            </div>
            <div class="poll-info">
                <p>Poll Link:</p>
                <p>https://favpolls.com/Poll/Join?code=@Model.Code</p>
                <button class="button submit-button share-button">Share<span>Copied!</span></button>
                <input type="hidden" name="code" value="@Model.Code">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/share-button.js" asp-append-version="true"></script>
}