@model PollVM
<main>
    <div class="index-container">
        <div class="subcontainer">
            <img src="~/images/icons/checkmark-circle.svg" alt="checkmark" width="150px" class="success-icon">
            <h1 class="title">Thank you for voting!</h1>
            <div class="form-container">
                <div class="poll-info">
                    <p>You voted for:</p>
                    <h3 class="voted-option">@Model.SelectedOption.Option</h3>
                </div>
                <div class="poll-info">
                    <p>Share this poll!</p>
                    <p>https://www.favpolls.com/poll/join?code=@Model.Poll.Code</p>
                </div>
            </div>
        </div>
    </div>
</main>