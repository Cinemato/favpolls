@page
@model LoginModel

<div class="index-container">
    <div class="subcontainer">
        <h1 class="title">Login Page</h1>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="noti-error" role="alert"></div>
            <div class="form-container auth-form">
                <div class="form-input">
                    <label asp-for="Input.Email">Email:</label>
                    <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="Type your email here" />
                </div>
                <div class="form-input">
                    <label asp-for="Input.Password">Password:</label>
                    <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" placeholder="Type your password here" />
                </div>
                <p class="side-link">Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register!</a></p>
                <button type="submit" class="button submit-button auth-button">Login</button>
            </div>
        </form>
    </div>
</div>
